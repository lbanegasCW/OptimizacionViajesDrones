<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="710.0" prefWidth="1090.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ar.edu.ubp.sia.optimizaciondrones.MainController">
   <children>
      <VBox prefHeight="464.0" prefWidth="920.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <Label alignment="TOP_LEFT" contentDisplay="TOP" style="-fx-font-weight: bold" text="Productos" />
      
                <TableView fx:id="tablaProductos" prefHeight="204.0" prefWidth="880.0">
              <columns>
                  <TableColumn fx:id="colNombre" prefWidth="280" text="Producto" />
                  <TableColumn fx:id="colPeso" prefWidth="130" text="Peso (kg)" />
                  <TableColumn fx:id="colAlto" prefWidth="130" text="Alto (cm)" />
                  <TableColumn fx:id="colAncho" prefWidth="130" text="Ancho (cm)" />
                  <TableColumn fx:id="colProf" prefWidth="130" text="Prof. (cm)" />
                  <TableColumn fx:id="colCantidad" prefWidth="130" text="Cantidad" />
              </columns>
          </TableView>
      
                <HBox spacing="5">
              <TextField fx:id="tfNombre" prefHeight="25.0" prefWidth="244.0" promptText="Nombre producto" />
              <TextField fx:id="tfPeso" prefHeight="25.0" prefWidth="123.0" promptText="Peso (kg)" />
            <TextField fx:id="tfAncho" prefHeight="25.0" prefWidth="128.0" promptText="Ancho (cm)" />
            <TextField fx:id="tfAlto" prefHeight="25.0" prefWidth="132.0" promptText="Alto (cm)" />
            <TextField fx:id="tfProfundidad" prefHeight="25.0" prefWidth="127.0" promptText="Prof. (cm)" />
              <TextField fx:id="tfCantidad" prefHeight="25.0" prefWidth="116.0" promptText="Cantidad" />
              <Button fx:id="btnAgregar" prefHeight="25.0" prefWidth="126.0" text="Agregar" />
          </HBox>
      
                <!-- Configuración del algoritmo genético -->
          <Label alignment="CENTER" style="-fx-font-weight: bold" text="Configuración Algoritmo Genético" />
      
                <HBox spacing="10">
              <VBox spacing="5">
                  <Label text="Selección:" />
                  <ComboBox fx:id="cbSeleccion" prefHeight="25.0" prefWidth="155.0" promptText="Tipo de selección" />
              </VBox>
              <VBox spacing="5">
                  <Label text="Cruza:" />
                  <ComboBox fx:id="cbCruza" prefHeight="25.0" prefWidth="140.0" promptText="Tipo de cruza" />
              </VBox>
              <VBox spacing="5">
                  <Label text="Mutación:" />
                  <ComboBox fx:id="cbMutacion" prefHeight="25.0" prefWidth="160.0" promptText="Tipo de mutación" />
              </VBox>
              <VBox spacing="5">
                  <Label text="T. Población:" />
                  <TextField fx:id="tfPoblacion" prefHeight="25.0" prefWidth="91.0" promptText="Ej: 30" />
              </VBox>
              <VBox spacing="5">
                  <Label text="Generaciones:" />
                  <TextField fx:id="tfGeneraciones" prefHeight="25.0" prefWidth="100.0" promptText="Ej: 50" />
              </VBox>
              <VBox spacing="5">
                  <Label text="Peso Max:" />
                  <TextField fx:id="tfPesoDron" prefHeight="25.0" prefWidth="84.0" promptText="Ej: 50" />
              </VBox>
              <VBox spacing="5">
                  <Label text="Volumen Max:" />
                  <TextField fx:id="tfVolumenDron" prefHeight="25.0" prefWidth="90.0" promptText="Ej: 50" />
              </VBox>
              <Button onAction="#onEjecutar" prefHeight="25.0" prefWidth="147.0" text="Ejecutar Optimización">
               <HBox.margin>
                  <Insets top="22.0" />
               </HBox.margin></Button>
          </HBox>
      
                <HBox spacing="10">

    </HBox>
         <Label alignment="CENTER" style="-fx-font-weight: bold" text="Resultados" />
      </VBox>
      <HBox prefHeight="240.0" prefWidth="920.0">
         <children>
             <AnchorPane fx:id="chartContainer" prefHeight="265.0" prefWidth="521.0" />
             <TextArea fx:id="consoleOutput" editable="false" prefHeight="298.0" prefWidth="575.0" wrapText="true">
               <HBox.margin>
                  <Insets bottom="25.0" left="10.0" right="20.0" top="20.0" />
               </HBox.margin>
            </TextArea>
         </children>
      </HBox>
   </children>
</VBox>
